/* analysis.wxss */

.analysis-container {
  padding-bottom: 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.primary-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: none;
}

/* 公司选择器 */
.company-selector {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-arrow {
  width: 0;
  height: 0;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-top: 14rpx solid #666;
}

/* 卡片通用样式 */
.overview-card, .metrics-card, .chart-card, .competitors-card, .actions-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

/* 分析概览卡片 */
.score-section {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.score-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.score-desc {
  display: flex;
  flex-direction: column;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.score-status {
  font-size: 32rpx;
  font-weight: bold;
}

/* 分数等级颜色 */
.score-low {
  background-color: #ff4d4f;
}

.score-medium {
  background-color: #faad14;
}

.score-high {
  background-color: #52c41a;
}

.text-success {
  color: #52c41a;
}

.text-danger {
  color: #ff4d4f;
}

/* 指标网格 */
.metrics-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx -10rpx;
}

.metric-item {
  width: 33.33%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.metric-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.trend-arrow {
  font-size: 32rpx;
}

.metric-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 图表样式 */
.chart-container {
  padding: 20rpx 0;
}

.chart-image {
  width: 100%;
  border-radius: 8rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.company-color {
  background-color: #1890ff;
}

.industry-color {
  background-color: #faad14;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 竞争对手分析 */
.competitors-list {
  padding: 10rpx 0;
}

.competitor-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.competitor-item:last-child {
  border-bottom: none;
}

.competitor-info {
  flex: 1;
}

.competitor-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.competitor-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.competitor-score {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.competitor-score text {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

/* 建议列表 */
.actions-list {
  padding: 10rpx 0;
}

.action-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #e6f7ff;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

.action-icon::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1890ff;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  flex: 1;
}

/* 空数据提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  justify-content: center;
  margin: 40rpx 30rpx 20rpx;
}

.secondary-btn {
  background-color: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  font-size: 32rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  text-align: center;
}