/* 通用区块样式 */
.news-section, .insights-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.more-link {
  font-size: 24rpx;
  color: #1890ff;
}

/* 最新动态样式 */
.news-list {
  margin-top: 20rpx;
}

.news-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.news-item:last-child {
  border-bottom: none;
}

.news-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.news-time {
  font-size: 24rpx;
  color: #999999;
}

/* 热门分析样式 */
.insights-list {
  margin-top: 20rpx;
}

.insight-card {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.insight-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.insight-category {
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.insight-time {
  font-size: 24rpx;
  color: #999999;
}

.insight-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.insight-summary {
  font-size: 24rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 空数据提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 26rpx;
}