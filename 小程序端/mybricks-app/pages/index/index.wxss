/* index.wxss */
.index-container {
  padding-bottom: 40rpx;
}

/* 横幅样式 */
.banner {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
}

.banner-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.banner-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

/* 统计卡片样式 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  margin: -50rpx 30rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  position: relative;
  z-index: 10;
}

.stats-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666666;
}

/* 快捷操作样式 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 30rpx 40rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
}

